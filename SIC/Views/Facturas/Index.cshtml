@model IEnumerable<shanuMVCUserRoles.Entidad.Factura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        Factura
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i>@Html.ActionLink("Principal", "AdminIndex", "Home")</li>
        <li class="active">Factura</li>
    </ol>
</section>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Cliente</th>
            <th style="width:140px">Total</th>
            <th style="width:140px">Creado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(m.Cliente, "detalle", new { id = m.IdFactura })
                </td>
                <td class="text-right">@string.Format("{0:c}", m.GranTotal)</td>
                <td class="text-right">@m.Fecha.ToString("dd-MM-yyyy")</td>
            </tr>
        }
    </tbody>
</table>
