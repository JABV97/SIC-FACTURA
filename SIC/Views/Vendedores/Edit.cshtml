@model shanuMVCUserRoles.Entidad.Vendedor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        Editar Vendedor
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i>@Html.ActionLink("Principal", "AdminIndex", "Home")</li>
        <li>@Html.ActionLink("Vendedores", "Index")</li>
        <li class="active">Editar</li>
    </ol>
</section>

<section class="content">

    <div class='box box-default color-palette-box'>
        <div class='box-header with-border'>
            <h3 class='box-title'><i class="fa fa-tag"></i>Descuentos</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdVendedor)
                @Html.HiddenFor(model => model.CreadoUTC, new { @Value = DateTime.Now.ToString() })
                @Html.HiddenFor(model => model.ModificadoUTC, new { @Value = DateTime.Now.ToString() })
                @Html.HiddenFor(model => model.Eliminado, new { @Value = false })

                <div class="row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.NombreVendedor)
                        @Html.EditorFor(model => model.NombreVendedor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreVendedor, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.ApellidoVendedor)
                        @Html.EditorFor(model => model.ApellidoVendedor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ApellidoVendedor, "", new { @class = "text-danger" })


                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-6">
                        @Html.LabelFor(model => model.CodVendedor)
                        @Html.EditorFor(model => model.CodVendedor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CodVendedor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="box-footer">

                    <input type="submit" value="Editar" class="btn btn-primary" /> |
                    @Html.ActionLink("Cancelar", "Index", "", new { @class = "btn btn-danger" })
                </div>
            </div>
        }

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
