@model shanuMVCUserRoles.Entidad.Vendedor

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        Eliminar descuento
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-home"></i>@Html.ActionLink("Principal", "AdminIndex", "Home")</li>
        <li>@Html.ActionLink("Vendedores", "Index")</li>
        <li class="active">Eliminar</li>
    </ol>
</section>
<section class="content">
    <div class="callout callout-danger">
        <h5>¿Está seguro que desea eliminar este registro?</h5>
    </div>
    <div class='box box-default color-palette-box'>
        <div class='box-header with-border'>
            <h3 class='box-title'><i class="fa fa-tag"></i>Vendedor seleccionado</h3>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdVendedor)
                @Html.HiddenFor(model => model.NombreVendedor)
                @Html.HiddenFor(model => model.ApellidoVendedor)
                @Html.HiddenFor(model => model.CodVendedor)
                @Html.HiddenFor(model => model.CreadoUTC, new { @Value = DateTime.Now.ToString() })
                @Html.HiddenFor(model => model.ModificadoUTC, new { @Value = DateTime.Now.ToString() })
                @Html.HiddenFor(model => model.Eliminado, new { @Value = true })
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.NombreVendedor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NombreVendedor)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ApellidoVendedor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ApellidoVendedor)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CodVendedor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CodVendedor)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CreadoUTC)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreadoUTC)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ModificadoUTC)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ModificadoUTC)
                    </dd>

                </dl>

                <div class="box-footer">
                    <input type="submit" value="Eliminar" class="btn btn-primary" /> |
                    @Html.ActionLink("Cancelar", "Index", "", new { @class = "btn btn-danger" })
                </div>
            </div>
        }
    </div>
</section>